<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcoTrivia" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorOnPrimary">@color/asparagus</item>
        <item name="colorPrimaryVariant">@color/laurel</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/asparagus</item>
        <item name="colorSecondaryVariant">@color/laurel</item>
        <item name="colorSecondaryContainer">@color/ash_grey</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TvBig">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/shark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvMedium">
        <item name="fontFamily">@font/lora</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/shark</item>
    </style>

    <style name="Button">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/asparagus</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>